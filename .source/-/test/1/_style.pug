style
  | * {
  |   margin: 0;
  |   padding: 0;
  |   list-style: none;
  |   box-sizing: border-box;
  | }
  | :root {
  |   background: #000;
  |   color: #eee;
  |   font-family: sans-serif;
  | }
  | a {
  |   color: #f69;
  |   text-decoration: none;
  | }
  | body {
  |   max-width: 700px;
  |   margin: 0 auto;
  |   padding: 5%;
  | }
  | form, h1, h2, h3, h4, h5, h6, nav, p {
  |   margin: 0 0 1rem;
  | }
  | nav ul {
  |   display: flex;
  | }
  | nav li {
  |   margin: 0 1.5em 0 0;
  | }
  | nav li:last-child {
  |   margin-right: 0;
  | }
